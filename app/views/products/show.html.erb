<section id="main" class="container">
<!-- Detail products -->
<div class="row">
  <section id="slider">
    <div class="span5">
      <div class="page-header">
        <h3>
           <%= @product.name%> <small>Body + 18-55mm lens</small>
        </h3>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %>

        <p>
          <b>Name:</b>
          <%= @product.name %>
        </p>

        <p>
          <b>Seo:</b>
          <%= @product.seo %>
        </p>

        <p>
          <b>Precio:</b>
          <%= @product.precio %>
        </p>

        <p>
          <b>Status:</b>
          <%if @product.status = 1 %>
              Activo
          <%else%>
              Inactivo
          <%end%>
        </p>

        <p>
          <b>Category:</b>
          <%= @product.category.name %>
        </p>
        <%#= image_tag @product.avatar.url, :size => "260x180" %>
        <br/>
        <br/>
      </div>

      <table class="product">
        <tr>
          <td>
            <span class="rating-static rating-45" style="float: right;"></span>
          </td>
          <td>
            (2,908 customer reviews)
          </td>
        </tr>
        <tr>
          <td>Availability:</td>
          <td>Pre-Order</td>
        </tr>
        <tr>
          <td>Precio de Lista:</td>
          <td><span class="listPrice">$2,200</span></td>
        </tr>
        <tr>
          <td>Precio:</td>
          <td><span class="priceLarge">$2,000</span></td>
        </tr>
        <tr>
          <td>Usted Ahorra:</td>
          <td><span class="youSave">$200</span></td>
        </tr>
        <tr>
          <td colspan="2" style="text-align:left">
            <div class="btn-toolbar">
              <div class="btn-group">
                <a href="#" class="btn"><i class="icon-heart"></i> Lo Quiero!</a>
              </div>
              <div class="btn-group">

                <a href="#" class="btn"><i class="icon-ok"></i> Compara</a>
              </div>
              <div class="btn-group pull-right">
                <%#= link_to raw('<i class="icon-shopping-cart icon-white"></i>'), card, confirm: 'Esta usted Seguro?', method: :delete, :class => 'btn btn-info' %>
                <a href="#" class="btn btn-info"><i class="icon-shopping-cart icon-white"></i> Comprar</a>
              </div>
              <div class="btn-group pull-right">
                <a class="btn" id="qty-minus" href="javascript:;;"><i class="icon-minus-sign"></i></a>
                <a class="btn active" href="#"><span id="item_qty">1</span></a>
                <a class="btn " id="qty-plus" href="javascript:;;"><i class="icon-plus-sign"></i></a>&nbsp;
              </div>

            </div>
          </td>
        </tr>
      </table>

      <hr>
      <!-- AddThis Button BEGIN -->
      <div class="addthis_toolbox addthis_default_style ">
        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
        <a class="addthis_button_tweet"></a>
        <a class="addthis_button_pinterest_pinit"></a>
        <a class="addthis_counter addthis_pill_style"></a>
      </div>
      <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
      <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f8f7bbc1ebd6187"></script>
      <!-- AddThis Button END -->
    </div>
    <div class="span7">
      <div class="carousel slide" id="myCarousel">
        <div class="carousel-inner">
          <div class="active item">
            <%= image_tag @product.avatar.url %>
          </div>
          <div class="item">
            <img alt="" src="demo/slider/large/canon-body2.jpg">
          </div>
          <div class="item">
            <img alt="" src="demo/slider/large/canon-lens.jpg">
          </div>
        </div>
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>
    </div>
  </section>
</div>


