<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :seo %><br />
    <%= f.text_field :seo %>
  </div>
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status,  options_for_select([["Activo", "1"], ["Inactivo", "2"]])%>
  </div>
  <div class="field">
    <%= f.label :category_id, "Categoria" %>
    <%= f.collection_select :category_id,  Category.order("id").all, :id, :name, options ={:prompt => "-- Selecciona Categoría --"}%>
  </div>
  <div class="field">
    <%= f.label :avatar, "Fotografía" %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
